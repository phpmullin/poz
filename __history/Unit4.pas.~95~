query.sql.text:='insert INTO rieltorskaya (Time,	date,	Rub,	vid_reklamiID,	Fam,	Name,	Otch,	tel,	email, PolID, tipdogovoraID'+
',komnat'+
',Otdel_komunnID'+
',propiska'+
',metroID'+
',Udal_metro'+
